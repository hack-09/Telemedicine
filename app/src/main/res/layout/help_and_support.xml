<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewHelpTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help and Support 🆘"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp" />

        <TextView
            android:id="@+id/buttonFAQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:text="@string/help_and_support"
            android:textColor="#000000" />

        <Button
            android:id="@+id/buttonContactSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Support 📞🆘"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Feedback ✍️📨"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonTroubleshooting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Troubleshooting 🛠️❗"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>