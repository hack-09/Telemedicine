<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/upcomingAppointmentsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointments"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewDoctorAppointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upcomingAppointmentsTitle"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/patientProfilesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Profiles"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/recyclerViewDoctorAppointments"
        android:layout_marginTop="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/patientProfilesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/patientProfilesTitle"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/patientQueueTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Queue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/patientProfilesRecyclerView"
        android:layout_marginTop="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/patientQueueRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/patientQueueTitle" />
</RelativeLayout>
